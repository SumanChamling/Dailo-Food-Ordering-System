<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Hotel Details"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/headid"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hotel's Name:"
        android:textSize="22dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/headid"
        android:layout_marginTop="50dp"
        android:id="@+id/firstText"/>
    <EditText
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/hotelid"
        android:layout_below="@+id/firstText"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hotels's Address:"
        android:textSize="22dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/hotelid"
        android:layout_marginTop="10dp"
        android:id="@+id/stdid"/>
    <EditText
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/addressid"
        android:layout_below="@+id/stdid"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Website:"
        android:textSize="22dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/addressid"
        android:layout_marginTop="10dp"
        android:id="@+id/thirdText"/>
    <EditText
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/websiteid"
        android:layout_below="@+id/thirdText"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude:"
        android:textSize="22dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/websiteid"
        android:layout_marginTop="10dp"
        android:id="@+id/fourthText"/>
    <EditText
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/latitudeid"
        android:layout_below="@+id/fourthText"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude:"
        android:textSize="22dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/latitudeid"
        android:layout_marginTop="10dp"
        android:id="@+id/longitude"/>
    <EditText
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/longitudeid"
        android:layout_below="@+id/latitudeid"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/longitudeid"
        android:text="Add Image"
        android:layout_marginLeft="10dp"
        android:id="@+id/addimage"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/addimage"
        android:text="SAVE"
        android:id="@+id/btnid"
        android:layout_marginTop="15dp"/>

</RelativeLayout>