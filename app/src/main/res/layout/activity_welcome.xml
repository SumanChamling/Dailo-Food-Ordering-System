<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logoid"
        android:layout_width="116dp"
        android:layout_height="61dp"

        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/fellid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/baloo_da"
        android:text="Fell Like"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/yourid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/fellid"
        android:fontFamily="@font/baloo_da"
        android:text="Your Family"
        android:textColor="@color/orange"
        android:textSize="35dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/burgerid"
        android:layout_width="269dp"
        android:layout_height="213dp"
        android:layout_below="@+id/fellid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/burger" />

    <TextView
        android:id="@+id/welcomeid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/burgerid"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/baloo_chettan"
        android:text="WELCOME"
        android:textColor="@color/orange"


        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/haveaccountid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomeid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/cairo"
        android:text="Do you have an account"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOG IN"
        android:id="@+id/loginbtn"
        android:layout_below="@id/welcomeid"
        android:layout_marginTop="70dp"
        android:paddingLeft="105dp"
        android:paddingRight="110dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/forlogin"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGESTER"
        android:id="@+id/registerbtn"
        android:layout_below="@id/loginbtn"
        android:layout_marginTop="20dp"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/forlogin"/>


</RelativeLayout>